/* pages/group-detail/group-detail.wxss */

.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
}

.group-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 28rpx;
  color: #303133;
}

.status,
.device-count,
.group-type,
.online-count {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.label {
  color: #999;
}

.value {
  color: #333;
}

.device-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}

.count {
  font-size: 28rpx;
  color: #666;
}

.device-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  background: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  transition: background-color 0.2s ease;
}

.device-item:active {
  background-color: #f5f5f5;
}

.device-item:last-child {
  border-bottom: none;
}

.name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.status {
  font-size: 26rpx;
  margin-bottom: 16rpx;
}

.status.online {
  color: #67C23A;
}

.status.offline {
  color: #909399;
}

/* Group status styles */
.status.normal {
  color: #67C23A;
}

.status.disabled-receive {
  color: #F56C6C;
}

.status.disabled-send {
  color: #F56C6C;
}

.status.disabled-both {
  color: #E6A23C;
}

/* RF type styles */
.rf-type.none {
  color: #909399;
}

.rf-type.internal {
  color: #409EFF;
}

.rf-type.external {
  color: #E6A23C;
}

/* Group type styles */
.group-type {
  font-size: 28rpx;
}

.group-type.public {
  color: #67C23A;
}

.group-type.relay {
  color: #409EFF;
}

.group-type.device {
  color: #E6A23C;
}

.group-type.listen {
  color: #909399;
}

.group-type.other {
  color: #F56C6C;
}

.info-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-row .label {
  color: #999;
  margin-right: 16rpx;
}

.info-row .value {
  color: #333;
  text-align: right;
}

.join-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.join-btn {
  margin: 32rpx 0;
  background: linear-gradient(135deg, #409EFF 0%, #64b5f6 100%);
  color: #fff;
  border-radius: 12rpx;
  text-align: center;
  padding: 14rpx;
  font-size: 34rpx;
  box-shadow: 0 4rpx 12rpx rgba(64, 158, 255, 0.3);
  transition: all 0.3s ease;
}

.join-btn:active {
  box-shadow: 0 2rpx 6rpx rgba(64, 158, 255, 0.3);
}

.join-btn.disabled {
  background: #c0c4cc;
  color: #fff;
}

.online {
  color: #409EFF;
}

.offline {
  color: #909399;
}

tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-right: 8rpx;
  transition: all 0.2s ease;
  /*float: left;*/
}

tag:active {
  transform: scale(0.95);
}

tag.online {
  background-color: #409EFF;
  color: #fff;
}

tag.offline {
  background-color: #909399;
  color: #fff;
}

.collapsible-toggle {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  color: #409EFF;
  font-size: 28rpx;
  cursor: pointer;
}

.collapsible-toggle .icon {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.3s ease;
}

.collapsible-toggle.expanded .icon {
  transform: rotate(180deg);
}

/* New status button styles */
.status-button-group {
  display: inline-flex;
  gap: 8rpx;
  padding: 4rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  vertical-align: right;
  margin-left: 16rpx;
  align-items: center;
  max-width: 250rpx;
  flex-shrink: 1;
  float: right;
}

.status-button {
  flex: 1;
  padding: 8rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 22rpx;
  color: #333;
  transition: all 0.2s ease;
  background: #fff;
  border: 1rpx solid #e4e7ed;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  white-space: nowrap;
}

.status-button.active {
  color: #fff;
  font-weight: 500;
  border-color: transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-button:nth-child(1).active {
  background: linear-gradient(135deg, #eb0303 0%, #eb0303 100%);
}

.status-button:nth-child(2).active {
  background: linear-gradient(135deg, #eb0303 0%, #eb0303  100%);
}

.status-button:nth-child(3).active {
  background: linear-gradient(135deg, #85ce61 0%, #85ce61 100%);
}

.status-button:nth-child(4).active {
  background: linear-gradient(135deg, #F56C6C 0%, #f78989 100%);
}

.status-button:active {
  opacity: 0.9;
}


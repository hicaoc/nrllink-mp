.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

label {
  width: auto;
  font-size: 14px;
  color: #1a1a1a;
  font-weight: 500;
  margin-right: 8px;
}

input {
  flex: 3;
  padding: 16px;
  border: 1px solid #eee;
  border-radius: 6px;
  font-size: 16px;
  color: #666666;
  box-sizing: border-box;
  margin-left: 8px;
  height: auto;
  vertical-align: middle;
  line-height: 1.5;
}

.upload-button {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  padding: 8px 16px;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  box-shadow: 0 2px 8px rgba(0,123,255,0.3);
}

.button {
  background-color: #007bff;
  color: white;
  padding: 16px;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  font-weight: 500;
  box-shadow: 0 2px 8px rgba(0,123,255,0.3);
}

.page-title {
  font-size: 24px;
  text-align: center;
  margin-bottom: 16px;
}

.image-preview {
  display: block;
}

image {
  width: 80px;
  height: 80px;
  margin-top: 8px;
  border: 1px solid #eee;
  border-radius: 6px;
}

/* pages/deviceParams/deviceParams.wxss */
.container {
    padding: 20rpx;
  }
  
  .dialog-title {
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .form-item {
    margin-bottom: 30rpx;
    display: flex;
    align-items: center;
  }
  
  .label {
    width: 200rpx;
    font-size: 28rpx;
    color: #333;
  }
  
  .device-info {
    font-size: 28rpx;
    color: #666;
  }
  
  .input {
    flex: 1;
    border: 1rpx solid #ddd;
    padding: 10rpx;
    font-size: 28rpx;
  }
  
  .picker {
    flex: 1;
    border: 1rpx solid #ddd;
    padding: 10rpx;
    font-size: 28rpx;
  }
  
  .radio {
    margin-right: 20rpx;
    font-size: 28rpx;
  }
  
  .collapse-item {
    margin-bottom: 20rpx;
  }
  
  .collapse-title {
    background-color: #f5f5f5;
    padding: 20rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
  }
  
  .collapse-content {
    padding: 20rpx;
    border: 1rpx solid #ddd;
    border-top: none;
  }
  
  .save-btn {
    margin-left: 20rpx;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    background-color: #1890ff;
    color: #fff;
  }
  
  .dialog-footer {
    display: flex;
    justify-content: center;
    margin-top: 40rpx;
  }
  
  .btn {
    width: 45%;
    padding: 20rpx;
    font-size: 32rpx;
    border-radius: 10rpx;
  }
  
  .cancel {
    background-color: #f5f5f5;
    color: #666;
  }
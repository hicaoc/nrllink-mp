.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.message-list {
  flex: 1;
  padding: 20rpx;
  overflow: auto;
}

.message-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  max-width: 70%;
}

.message-item.self {
  margin-left: auto;
  background-color: #e6f7ff;
}

.message-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.sender {
  font-weight: bold;
  color: #333;
}

.timestamp {
  font-size: 24rpx;
  color: #999;
}

.message-content {
  font-size: 28rpx;
  color: #666;
}

.input-area {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

input {
  flex: 1;
  margin-right: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
}

button {
  width: 150rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 10rpx;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f0f2f5;
  padding: 0;
  color: #2c3e50;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, sans-serif;
}

/* New Header Layout */
.header-section {
  background: #ffffff;
  padding: 25rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* User identity portion */
.user-info-box {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar-wrapper {
  padding: 0;
  margin: 0;
  width: 100rpx !important;
  height: 100rpx !important;
  border-radius: 50%;
  border: 4rpx solid #f8f9fa;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-text {
  margin-left: 20rpx;
}

.user-row-one {
  display: flex;
  align-items: baseline;
  margin-bottom: 6rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.user-callsign {
  font-size: 20rpx;
  color: #06a94d;
  font-weight: 600;
  background: #e8f5e9;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

.user-tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  font-size: 16rpx;
  color: #95a5a6;
  background: #f8f9fa;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  border: 1px solid #edf0f2;
}

/* System status portion (Right aligned) */
.system-status-box {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: right;
  padding-left: 20rpx;
}

.server-label {
  display: flex;
  align-items: flex-start;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  border: 1px solid #edf0f2;
}

.server-label.clickable {
  transition: opacity 0.2s;
}

.server-label.clickable:active {
  opacity: 0.6;
}

/* Group Row - Second Row */
.group-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #f0f0f0;
}

/* Group Name Section (Left) */
.group-picker {
  flex: 1;
}

.group-name-section {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #e8f5e9, #f1f8f4);
  border-radius: 12rpx;
  border: 2rpx solid #06a94d;
  max-width: fit-content;
}

.group-name-section.clickable {
  transition: all 0.2s;
}

.group-name-section.clickable:active {
  opacity: 0.7;
  transform: scale(0.98);
}

.group-name-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #06a94d;
  margin-right: 8rpx;
}

.group-switch-hint {
  font-size: 18rpx;
  color: #06a94d;
  opacity: 0.7;
}

/* Group Count Section (Right) */
.group-count-section {
  display: flex;
  align-items: baseline;
  padding: 12rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.2s;
}

.group-count-section.clickable:active {
  opacity: 0.7;
  transform: scale(0.98);
}

.count-online {
  font-size: 28rpx;
  font-weight: bold;
  color: #2ecc71;
}

.count-separator {
  font-size: 24rpx;
  color: #95a5a6;
  margin: 0 5rpx;
}

.count-total {
  font-size: 28rpx;
  font-weight: bold;
  color: #7f8c8d;
}

.status-indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  margin-top: 8rpx;
}

.status-indicator-dot.online {
  background: #2ecc71;
}

.status-indicator-dot.offline {
  background: #e74c3c;
}

.server-info-text {
  display: flex;
  flex-direction: column;
}

.server-name {
  font-size: 18rpx;
  color: #333;
  font-weight: 600;
}

.server-addr {
  font-size: 16rpx;
  color: #7f8c8d;
  font-family: monospace;
}

/* Chat Section */
.chat-section {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

.chat-list {
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

.message-item {
  display: flex;
  margin-bottom: 35rpx;
  padding: 0 25rpx;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-item.self {
  flex-direction: row-reverse;
}

.avatar-sm {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #06a94d, #058c40);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 15rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(6, 169, 77, 0.2);
}

.bubble-container {
  max-width: 72%;
  display: flex;
  flex-direction: column;
}

.message-item.self .bubble-container {
  align-items: flex-end;
}

.sender-info {
  margin-bottom: 8rpx;
  display: flex;
  flex-direction: column;
}

.sender-main {
  display: flex;
  align-items: baseline;
  margin-bottom: 4rpx;
}

.sender-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #5d6d7e;
  margin-right: 15rpx;
}

.sender-dmrid {
  font-size: 20rpx;
  font-weight: normal;
  color: #95a5a6;
}

.sender-time {
  font-size: 20rpx;
  color: #bdc3c7;
}

.sender-qth {
  font-size: 20rpx;
  color: #7f8c8d;
  background: rgba(255, 255, 255, 0.7);
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
  align-self: flex-start;
  max-width: fit-content;
  border: 1px solid rgba(0, 0, 0, 0.03);
}

.bubble {
  padding: 20rpx 28rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
  position: relative;
}

.other .bubble {
  background: #ffffff;
  color: #34495e;
  border-top-left-radius: 4rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.04);
}

.self .bubble {
  background: linear-gradient(135deg, #06a94d, #058c40);
  color: #fff;
  border-top-right-radius: 4rpx;
  box-shadow: 0 4rpx 15rpx rgba(6, 169, 77, 0.2);
}

/* Voice Bubble Specifics */
.voice-bubble {
  display: flex;
  align-items: center;
  min-width: 140rpx;
  height: 80rpx;
  box-sizing: border-box;
  transition: all 0.3s;
}

.voice-bubble.playing {
  animation: voicePulse 1.5s ease-in-out infinite;
}

@keyframes voicePulse {

  0%,
  100% {
    transform: scale(1);
    opacity: 1;
  }

  50% {
    transform: scale(1.02);
    opacity: 0.95;
  }
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-icon.playing .play-icon-inner {
  animation: playIconBounce 0.6s ease-in-out infinite;
}

@keyframes playIconBounce {

  0%,
  100% {
    transform: translateX(0);
  }

  50% {
    transform: translateX(4rpx);
  }
}

.play-icon-inner {
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 16rpx solid currentColor;
  margin-left: 4rpx;
}

.self .play-icon-inner {
  border-left-color: #fff;
}

.other .play-icon-inner {
  border-left-color: #06a94d;
}

.duration {
  font-size: 26rpx;
  font-weight: 500;
  opacity: 0.9;
}

/* Receiving Animation */
.active-receiving .voice-bubble {
  background: #ffffff;
  border: 2rpx dashed #06a94d;
  box-shadow: 0 0 20rpx rgba(6, 169, 77, 0.1);
  transition: width 0.2s linear;
}

.status-receiving {
  font-size: 20rpx;
  color: #06a94d;
  font-weight: 600;
}

@keyframes pulse {
  0% {
    opacity: 0.5;
    transform: scale(0.98);
  }

  50% {
    opacity: 1;
    transform: scale(1);
  }

  100% {
    opacity: 0.5;
    transform: scale(0.98);
  }
}

/* Bottom Area - Glassmorphism */
.bottom-area {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(0, 0, 0, 0.05);
  padding: 20rpx 30rpx calc(env(safe-area-inset-bottom) + 20rpx);
  position: relative;
  z-index: 100;
}

.input-bar {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.text-input {
  flex: 1;
  background: rgba(240, 242, 245, 0.8);
  height: 84rpx;
  border-radius: 42rpx;
  padding: 0 35rpx;
  font-size: 28rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.text-input:focus {
  background: #fff;
  border-color: #06a94d;
  box-shadow: 0 0 10rpx rgba(6, 169, 77, 0.1);
}

.send-btn {
  padding: 0 30rpx;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #bdc3c7;
  transition: all 0.3s;
}

.send-btn.active {
  color: #06a94d;
  font-weight: 700;
  transform: scale(1.05);
}

.ptt-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.status-indicator {
  position: absolute;
  left: 20rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
}

.status-indicator.connected {
  background: #2ecc71;
}

.status-indicator.disconnected {
  background: #e74c3c;
}

.ptt-btn {
  width: 100% !important;
  height: 100rpx;
  background: linear-gradient(135deg, #06a94d, #058c40);
  color: #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(6, 169, 77, 0.3);
  transition: all 0.2s;
  letter-spacing: 2rpx;
}

.ptt-btn.active {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  box-shadow: 0 0 30rpx rgba(231, 76, 60, 0.5);
  transform: scale(0.98);
}

.ptt-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.ptt-icon {
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  border-radius: 50%;
  margin-right: 20rpx;
  position: relative;
}

.ptt-btn.active .ptt-icon {
  animation: blink-red 1s infinite;
}

@keyframes blink-red {
  0% {
    transform: scale(1);
    opacity: 1;
  }

  50% {
    transform: scale(1.5);
    opacity: 0;
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Online Devices Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-container {
  background: #ffffff;
  border-radius: 24rpx;
  width: 85%;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(-50rpx);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 35rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #95a5a6;
  cursor: pointer;
  transition: all 0.2s;
}

.modal-close:active {
  transform: scale(0.9);
  color: #e74c3c;
}

.modal-body {
  padding: 20rpx 35rpx 35rpx;
  overflow-y: auto;
  max-height: 60vh;
}

.empty-state {
  padding: 80rpx 0;
  text-align: center;
  color: #95a5a6;
  font-size: 28rpx;
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.device-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #edf0f2;
  transition: all 0.2s;
}

.device-item:active {
  background: #e8f5e9;
  border-color: #06a94d;
}

.device-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #06a94d, #058c40);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(6, 169, 77, 0.2);
}

.device-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.device-callsign {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.device-status {
  font-size: 24rpx;
  color: #2ecc71;
  background: #e8f5e9;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

/* Server Switch Modal Specifics */
.server-modal {
  padding-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #5d6d7e;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  background: #f8f9fa;
  border: 2rpx solid #edf0f2;
  border-radius: 12rpx;
  height: 80rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.picker-view {
  background: #f8f9fa;
  border: 2rpx solid #edf0f2;
  border-radius: 12rpx;
  height: 80rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.switch-server-btn {
  background: linear-gradient(135deg, #06a94d, #058c40);
  color: #fff;
  border-radius: 40rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(6, 169, 77, 0.3);
}

.switch-server-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}
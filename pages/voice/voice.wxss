.info {
  display: flex;
  flex-direction: column;
  margin-left: 116px; /* Margin to the right of the avatar-wrapper */
}

.name {
  font-size: 20px;
  font-weight: 600;
  color: #1a1a1a;
}

.call-sign {
  font-size: 16px;
  color: #666666;
  margin-top: 8px;
  font-weight: 500;
}

.current-group {
  font-size: 14px;
  color: #999999;
  margin-top: 4px;
  font-weight: 400;
}

.codec-select {
  margin-top: 32px;
  padding: 24px;
  background: #ffffff;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.08);
}

.title {
  font-size: 18px;
  color: #1a1a1a;
  margin-bottom: 16px;
  font-weight: 600;
}

.radio-group {
  display: flex;
  gap: 24px;
}

.radio-item {
  font-size: 16px;
  color: #666666;
}

.radio-item radio {
  margin-right: 8px;
}

.current-call {
  margin: 12px 0 4px 0; /* Increased top margin, kept bottom margin minimal */
  padding: 6px;
  background-color: #f5f5f5;
  border-radius: 8px;
  text-align: center;
}

.history-container {
  margin: 8px 0; /* 控制上下外边距 */
  padding: 8px; /* 控制内边距 */
  background: #ffffff;
  border-radius: 16px; /* 圆角 */
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08); /* 阴影效果 */
  max-height: 150px; /* 限制容器最大高度 */
  height: 150px; /* 确保固定高度 */
  overflow: hidden; /* 防止溢出 */
}

.call-history {
  max-height: 100%; /* 继承父级的最大高度 */
  overflow-y: auto; /* 启用垂直滚动 */
  padding-right: 6px; /* 防止滚动条遮挡内容 */
  box-sizing: border-box; /* 确保 padding 不影响宽度计算 */
}

.call-item {
  padding: 6px 24px; /* 增大左右内边距 */
  border-bottom: 1px solid #eee; /* 分隔线 */
  display: flex;
  align-items: baseline; /* 垂直居中 */
  justify-content: space-between; /* 内容均匀分布 */
  gap: 6px; /* 控制字段间的间距 */
  line-height: 1.2; /* 调整文本行高 */
}

.call-item:last-child {
  border-bottom: none;
}

.call-sign {
  font-size: 14px;
  color: #333;
  white-space: nowrap;       /* 防止文本换行 */
  font-weight: 500;
}

.call-name {
  font-size: 12px;
  color: #333;
  line-height: 1.2; /* 确保一致的行高 */
  white-space: nowrap;       /* 防止文本换行 */
  overflow: hidden;          /* 隐藏超出容器的内容 */
  text-overflow: ellipsis;   /* 用省略号表示被截断的文本 */
}

.call-duration {
  font-size: 12px;
  color: #666;
  margin-left: auto;
}

.call-time {
  font-size: 12px;
  color: #999;
}

.talk-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 4px 0;
  min-height: 0;
}

.talk-btn {
  width: 160px;
  height: 160px;
  border-radius: 50%;
  background: #07c160;
  color: #ffffff;
  font-size: 18px;
  font-weight: 5e00;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4px 16px rgba(7,193,96,0.3);
  transition: all 0.2s ease;
}

.talk-btn.active {
  background: #f5222d;
  box-shadow: 0 4px 16px rgba(245,34,45,0.3);
}

.settings {
  padding: 20px;
  background: #ffffff;
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4px 16px rgba(0,0,0,0.08);
}

.settings navigator {
  display: flex;
  align-items: center;
  color: #1a1a1a;
  font-size: 16px;
  font-weight: 500;
}

.settings image {
  width: 20px;
  height: 20px;
  margin-left: 12px;
}

.server-status {
  margin: 4px 0;
  padding: 12px 16px;
  background: #ffffff;
  border-radius: 16px;
  display: flex;
  align-items: center;
  box-shadow: 0 4px 16px rgba(0,0,0,0.08);
}

.status-indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  margin-right: 12px;
  transition: background-color 0.3s ease;
}

.status-indicator.connected {
  background-color: #52c41a;
  box-shadow: 0 0 8px rgba(82,196,26,0.4);
}

.status-indicator.disconnected {
  background-color: #ff4d4f;
  box-shadow: 0 0 8px rgba(255,77,79,0.4);
}

.status-text {
  font-size: 16px;
  color: #1a1a1a;
  font-weight: 500;
}

.audio-output-select {
  margin: 20px 0;
  padding: 16px;
  background: #ffffff;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.08);
}

.audio-output-select .title {
  font-size: 16px;
  color: #1a1a1a;
  margin-bottom: 12px;
  font-weight: 500;
}

.audio-output-select .radio-group {
  display: flex;
  gap: 24px;
}

.audio-output-select .radio-item {
  font-size: 14px;
  color: #666666;
  display: flex;
  align-items: center;
}

.audio-output-select .radio-item radio {
  margin-right: 8px;
}

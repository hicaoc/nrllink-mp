page {
  background: linear-gradient(180deg, #f0f2f5 0%, #ffffff 100%);
}

.container {
  padding: 24px;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

.user-card {
  display: flex;
  align-items: center;
  padding: 24px;
  background: #ffffff;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  position: relative;
}

.avatar-wrapper {
  width: 76px; /* 外层容器大小 */
  height: 76px;
  border-radius: 50%; /* 圆形 */
  overflow: hidden; /* 确保内部元素不会溢出 */
  padding: 0; /* 移除按钮的默认内边距 */
  border: none; /* 移除按钮的默认边框 */
  background: none; /* 移除按钮的默认背景 */
  display: flex; /* 确保内容居中对齐 */
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 24px; /* Fixed position from the left */
  z-index: 1; /* Ensure the avatar-wrapper is above other elements */
}

.avatar {
  width: 72px;
  height: 72px;
  border-radius: 50%;
  border: 2px solid #ffffff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}


    </view>
  </view>

  <!-- Server Switch Modal -->
  <view class="modal-overlay {{showServerModal ? 'show' : ''}}" bindtap="hideServerModal" wx:if="{{showServerModal}}">
    <view class="modal-container server-modal" catchtap="stopPropagation">

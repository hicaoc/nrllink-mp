/* 基础样式 */
.container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 40rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: #1a8cff;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  padding: 16rpx 0;
}

.label {
  color: #666;
  min-width: 160rpx;
  font-weight: 400;
}

.value {
  color: #333;
  font-weight: 500;
  flex: 1;
}

/* 选择器样式 */
.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #eee;
}

.picker .value {
  color: #999;
  font-size: 32rpx;
}

.picker .arrow {
  width: 40rpx;
  height: 40rpx;
}

/* 按钮样式 */
.action-container {
  margin: 60rpx 0;
  padding: 0 20rpx;
}

.primary-btn {
  background: #1a8cff;
  color: #fff;
  border-radius: 48rpx;
  font-size: 36rpx;
  height: 96rpx;
  line-height: 96rpx;
  transition: all 0.2s;
  box-shadow: 0 4rpx 16rpx rgba(26, 140, 255, 0.3);
}

.primary-btn[disabled] {
  background: #e6e6e6;
  color: #b3b3b3;
  opacity: 0.8;
  box-shadow: none;
}

/* 设备信息样式 */
.device-info {
  margin-bottom: 40rpx;
}

.device-info .label {
  color: #1a8cff;
  font-weight: 500;
}

.device-info .value {
  font-size: 36rpx;
  color: #1a1a1a;
}

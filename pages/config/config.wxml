<view class="page-container">
  <!-- 群组选择卡片 -->
  <view class="card">
    <view class="card-title">选择群组</view>
    <view class="group-list">
      <view 
        wx:for="{{groups}}" 
        wx:key="id"
        class="group-item"
        bindtap="navigateToGroupDetail"
        data-group="{{item}}">
        <text class="group-name">{{item.displayName}}</text>
        <view class="group-stats">
          <text class="online-count">{{item.onlineCount || 0}}</text>
          <text class="total-count">/{{item.deviceCount || 0}}</text>
        </view>
      </view>
    </view>
  </view>

</view>

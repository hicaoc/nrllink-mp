.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.login-box {
  width: 90%;
  max-width: 400px;
  padding: 40px 20px;
  background-color: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
}

.logo {
  text-align: center;
  margin-bottom: 30px;
}

.logo image {
  width: 120px;
  height: 120px;
}

.input-group {
  margin-bottom: 20px;
}

.label {
  display: block;
  margin-bottom: 8px;
  font-size: 14px;
  color: #666;
}

.input {
  width: 80%;
  height: 44px;
  padding: 0 16px;
  margin: 0 auto;
  border: 1px solid #e0e0e0;
  border-radius: 12px;
  font-size: 15px;
  background-color: #fafafa;
  transition: all 0.2s ease;
}

.input-group {
  margin-bottom: 24px;
}

.input:focus {
  border-color: #2575fc;
  box-shadow: 0 0 0 3px rgba(37, 117, 252, 0.2);
  outline: none;
}

.remember-me {
  margin: 12px 0;
  font-size: 14px;
  color: #666;
}

.remember-me label {
  display: flex;
  align-items: center;
}

.remember-me checkbox {
  margin-right: 8px;
}

.login-btn {
  width: 100%;
  height: 44px;
  line-height: 44px;
  background-color: #2575fc;
  color: #fff;
  font-size: 16px;
  border-radius: 8px;
  margin-top: 20px;
  border: none;
  transition: opacity 0.2s ease;
}

.login-btn:active {
  opacity: 0.9;
}
